{
  "name": "Avaliacao",
  "type": "object",
  "properties": {
    "produto_id": {
      "type": "string",
      "description": "ID do produto avaliado"
    },
    "produto_nome": {
      "type": "string",
      "description": "Nome do produto"
    },
    "cliente_id": {
      "type": "string",
      "description": "ID do cliente"
    },
    "cliente_nome": {
      "type": "string",
      "description": "Nome do cliente"
    },
    "pedido_id": {
      "type": "string",
      "description": "ID do pedido relacionado"
    },
    "nota": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Nota de 1 a 5 estrelas"
    },
    "comentario": {
      "type": "string",
      "description": "Coment\u00e1rio do cliente"
    },
    "status": {
      "type": "string",
      "enum": [
        "pendente",
        "aprovado",
        "rejeitado"
      ],
      "default": "pendente",
      "description": "Status da modera\u00e7\u00e3o"
    }
  },
  "required": [
    "produto_id",
    "cliente_id",
    "nota"
  ]
}